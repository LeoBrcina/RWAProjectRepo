@model GameVM

@{
	ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/CRUDStyles.css" asp-append-version="true" />

<h1>Game Details</h1>

<div class="infoContainer">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameTypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameTypeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GenreNames)
        </dt>
        <dd class="col-sm-10">
            @if (Model.GenreNames != null && Model.GenreNames.Any())
            {
                <ul class="genre-list">
                    @foreach (var genre in Model.GenreNames)
                    {
                        <li>@genre</li>
                    }
                </ul>
            }
            else
            {
                <p>No genres selected!</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
    </dl>
</div>
<div class="buttonContainer">
    <a asp-action="Index" class="btn btn-primary">Back to Game List</a>
</div>
