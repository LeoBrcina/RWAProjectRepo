@model GameVM

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/CRUDStyles.css" asp-append-version="true" />

<h1>Edit Game</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameName" class="control-label"></label>
                <input asp-for="GameName" class="form-control" />
                <span asp-validation-for="GameName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameTypeId" class="control-label"></label>
                <select asp-for="GameTypeId" asp-items="ViewBag.GameTypeDdlItems" class="form-select">
                    <option value="">(not selected)</option>
                </select>
                <span asp-validation-for="GameTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GenreIds" class="control-label"></label>
                <select asp-for="GenreIds" asp-items="ViewBag.GenreDdlItems" class="form-select" multiple="multiple"></select>
                <span asp-validation-for="GenreIds" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Game" class="mt-3 btn btn-primary" />
                <a asp-action="Index" class="mt-3 btn btn-primary">Back to Game List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

