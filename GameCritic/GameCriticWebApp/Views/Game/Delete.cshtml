@model GameVM

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/CRUDStyles.css" asp-append-version="true" />

<h1>Delete Game</h1>

<h3>Are you sure you want to delete this game?</h3>
<div class="infoContainer">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete Game" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Back to Game List</a>
    </form>
</div>
