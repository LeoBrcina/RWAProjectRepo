@model GameCriticWebApp.ViewModels.ReviewVM

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/CRUDStyles.css" asp-append-version="true" />

<h1>Delete Review</h1>

<h3>Are you sure you want to delete this review?</h3>
<div class="infoContainer">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReviewText)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete Review" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-primary">Back to Review List</a>
    </form>
</div>
